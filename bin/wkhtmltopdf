require 'rbconfig'

suffix = case RbConfig::CONFIG['host_os']
         when /linux/
           os = `. /etc/os-release 2> /dev/null && echo ${ID}_${VERSION_ID}`.strip

           architecture = 'amd64' if RbConfig::CONFIG['host_cpu'] == 'x86_64'

           "#{os}_#{architecture}"
         when /darwin/
           'macos_cocoa' if RbConfig::CONFIG['host_cpu'] == 'x86_64'
         else
           'unknown'
         end

binary = "#{__FILE__}_#{suffix}"

if File.exist?("#{binary}.bz2") && !File.exist?(binary)
  system("bzip2 --decompress --keep #{binary}.bz2 -f") ||
    raise("Decompression of #{binary}.bz2 failed. Do you have bzip2 installed?")
end

unless File.exist? binary
  raise 'Invalid platform, must be running on Debian 8/9, or intel-based macOS' \
        "(missing binary: #{binary})."
end

system *$*.unshift(binary)
